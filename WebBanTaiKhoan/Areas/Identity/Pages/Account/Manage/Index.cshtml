@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "/Views/Shared/_Layout.cshtml"; // Sử dụng layout chính để đẹp đồng bộ
}

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-12 mb-4">
            <h2 class="fw-bold text-dark"><i class="fa-solid fa-user-circle me-2 text-primary"></i>QUẢN TRỊ TÀI KHOẢN</h2>
            <hr class="opacity-10">
        </div>

        @* Cột Menu bên trái *@
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action py-3 border-0 active" asp-page="./Index">
                        <i class="fa-solid fa-address-card me-2"></i> Thông tin hồ sơ
                    </a>
                    <a class="list-group-item list-group-item-action py-3 border-0" asp-page="./Email">
                        <i class="fa-solid fa-envelope me-2"></i> Thay đổi Email
                    </a>
                    <a class="list-group-item list-group-item-action py-3 border-0" asp-page="./ChangePassword">
                        <i class="fa-solid fa-shield-halved me-2"></i> Đổi mật khẩu
                    </a>
                </div>
            </div>
        </div>

        @* Cột nội dung chính *@
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4 p-4 p-md-5 bg-white">
                <h4 class="fw-bold mb-4 text-primary">THÔNG TIN CÁ NHÂN</h4>
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control bg-light border-0" disabled />
                        <label asp-for="Username">Tên tài khoản (Email)</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.PhoneNumber" class="form-control border-primary border-opacity-25" placeholder="Số điện thoại" />
                        <label asp-for="Input.PhoneNumber">Số điện thoại liên hệ</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary px-5 py-3 fw-bold rounded-pill">
                        LƯU THAY ĐỔI <i class="fa-solid fa-save ms-2"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>