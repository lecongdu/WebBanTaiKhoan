@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "_Layout.cshtml";
}

<h4 class="fw-bold mb-4 text-primary text-uppercase"><i class="fa-solid fa-key me-2"></i>Thay đổi mật khẩu bảo mật</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-9">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control border-primary border-opacity-10 shadow-none bg-light" style="border-radius: 12px;" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu cũ" />
                <label asp-for="Input.OldPassword">Mật khẩu hiện tại</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control border-primary border-opacity-25 shadow-none" style="border-radius: 12px;" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu mới" />
                <label asp-for="Input.NewPassword">Mật khẩu mới (Tối thiểu 6 ký tự)</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control border-primary border-opacity-25 shadow-none" style="border-radius: 12px;" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu" />
                <label asp-for="Input.ConfirmPassword">Xác nhận lại mật khẩu mới</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary px-5 py-3 fw-bold shadow-sm rounded-pill w-100 w-md-auto">
                LƯU MẬT KHẨU MỚI <i class="fa-solid fa-shield-check ms-2"></i>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}