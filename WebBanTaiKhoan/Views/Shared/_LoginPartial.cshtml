@using Microsoft.AspNetCore.Identity
@using WebBanTaiKhoan.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        // Lấy thông tin User hiện tại
        var user = await UserManager.GetUserAsync(User);

        if (user != null)
        {
            <li class="nav-item me-3">
                <a class="nav-link text-warning fw-bold border border-warning rounded-pill px-3 py-1"
                   asp-controller="Home" asp-action="Deposit"
                   title="Bấm để nạp thêm tiền">
                    <i class="fa-solid fa-wallet me-1"></i>
                    @user.Balance.ToString("N0") đ
                </a>
            </li>

            <li class="nav-item dropdown">
                <a id="manage" class="nav-link dropdown-toggle text-dark fw-bold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-circle-user fa-lg me-1 text-primary"></i>
                    @(user.FullName ?? user.UserName)
                </a>

                <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-4 mt-2">
                    <li>
                        <div class="px-3 py-2 border-bottom bg-light rounded-top-4">
                            <span class="d-block small text-muted">Xin chào,</span>
                            <span class="fw-bold text-primary text-truncate" style="max-width: 200px; display:block;">
                                @user.UserName
                            </span>
                        </div>
                    </li>

                    <li>
                        <a class="dropdown-item py-2" asp-controller="Home" asp-action="Deposit">
                            <i class="fa-solid fa-credit-card me-2 text-success"></i> Nạp tiền ngay
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item py-2" asp-area="Identity" asp-page="/Account/Manage/Index">
                            <i class="fa-solid fa-gear me-2 text-secondary"></i> Cài đặt tài khoản
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item py-2 fw-bold text-danger" asp-controller="Admin" asp-action="Index">
                                <i class="fa-solid fa-user-shield me-2"></i> TRANG QUẢN TRỊ
                            </a>
                        </li>
                    }

                    <li><hr class="dropdown-divider"></li>

                    <li>
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="dropdown-item text-danger fw-bold py-2">
                                <i class="fa-solid fa-right-from-bracket me-2"></i> Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark fw-bold me-2" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm" asp-area="Identity" asp-page="/Account/Login">
                <i class="fa-solid fa-user me-1"></i> Đăng nhập
            </a>
        </li>
    }
</ul>