@model IEnumerable<WebBanTaiKhoan.Models.AccountItem>

@{
    ViewData["Title"] = "Kho tài khoản";
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="container-fluid mt-4 pb-5">
    @* --- NÚT ĐIỀU HƯỚNG QUAY LẠI --- *@
    <div class="mb-3">
        <a href="/Admin" class="btn btn-outline-secondary btn-sm rounded-pill px-3 shadow-sm border-2 fw-bold hover-up">
            <i class="fa-solid fa-arrow-left me-1"></i> Trở lại Admin
        </a>
    </div>

    @* --- HEADER & SEARCH BAR --- *@
    <div class="card shadow-sm border-0 mb-4 rounded-4 overflow-hidden">
        <div class="card-body bg-white p-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="fw-bold text-dark mb-1">
                        <i class="fa-solid fa-key text-warning me-2"></i> KHO TÀI KHOẢN
                    </h2>
                    <p class="text-muted small mb-0">Quản lý danh sách tài khoản mật khẩu của các sản phẩm</p>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <div class="d-flex flex-wrap gap-2 justify-content-md-end align-items-center">

                        @* FORM TÌM KIẾM *@
                        <form asp-action="Index" method="get" class="d-flex gap-1 me-md-2">
                            <div class="input-group shadow-sm rounded-pill overflow-hidden border">
                                <input type="text" name="searchString" class="form-control border-0 ps-3"
                                       placeholder="Tìm Email hoặc Tên SP..." value="@currentFilter" style="width: 220px;" />
                                <button type="submit" class="btn btn-white border-0 px-3 text-primary">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </button>
                            </div>
                            @if (!string.IsNullOrEmpty(currentFilter))
                            {
                                <a asp-action="Index" class="btn btn-light rounded-circle shadow-sm ms-1" title="Xóa tìm kiếm">
                                    <i class="fa-solid fa-xmark"></i>
                                </a>
                            }
                        </form>

                        <a asp-action="Create" class="btn btn-primary fw-bold px-4 rounded-pill shadow-sm hover-up">
                            <i class="fa-solid fa-plus me-1"></i> NẠP ACC MỚI
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* --- DATA TABLE --- *@
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase small tracking-wider">Sản phẩm</th>
                            <th class="py-3 text-uppercase small tracking-wider">Tài khoản (Username)</th>
                            <th class="py-3 text-uppercase small tracking-wider">Mật khẩu (Password)</th>
                            <th class="py-3 text-center text-uppercase small tracking-wider">Trạng thái</th>
                            <th class="text-end pe-4 py-3 text-uppercase small tracking-wider">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <div class="py-4">
                                        <i class="fa-solid fa-folder-open fs-1 d-block mb-3 opacity-25"></i>
                                        <p class="fs-5">Không tìm thấy tài khoản nào trong kho.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            // LOGIC TÁCH CHUỖI TỪ CỘT DATA NẾU USER/PASS TRỐNG
                            string displayUser = item.Username;
                            string displayPass = item.Password;

                            if (string.IsNullOrEmpty(displayUser) && !string.IsNullOrEmpty(item.Data))
                            {
                                var parts = item.Data.Split('|');
                                displayUser = parts[0];
                                displayPass = parts.Length > 1 ? parts[1] : "******";
                            }

                            <tr class="@(item.IsSold ? "bg-light bg-opacity-50" : "") transition">
                                <td class="ps-4">
                                    <span class="fw-bold text-dark">@(item.Product?.Name ?? "N/A")</span>
                                    <div class="small text-muted" style="font-size: 10px;">Ngày nhập: @item.CreatedAt.ToString("dd/MM/yyyy")</div>
                                </td>
                                <td>
                                    <code class="p-2 border rounded bg-light text-primary small d-inline-block shadow-sm">
                                        @(string.IsNullOrEmpty(displayUser) ? "Chưa có" : displayUser)
                                    </code>
                                </td>
                                <td>
                                    <code class="p-2 border rounded bg-light text-danger small d-inline-block shadow-sm">
                                        @(string.IsNullOrEmpty(displayPass) ? "Chưa có" : displayPass)
                                    </code>
                                </td>
                                <td class="text-center">
                                    @if (item.IsSold)
                                    {
                                        <span class="badge rounded-pill bg-danger-subtle text-danger px-3 py-2 border border-danger border-opacity-10">
                                            <i class="fa-solid fa-cart-shopping me-1"></i>Đã bán
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-success-subtle text-success px-3 py-2 border border-success border-opacity-10">
                                            <i class="fa-solid fa-boxes-stacked me-1"></i>Sẵn có
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white text-warning border-end" title="Sửa">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white text-danger" title="Xóa">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .tracking-wider {
        letter-spacing: 1px;
    }

    .bg-danger-subtle {
        background-color: #fff5f5 !important;
    }

    .bg-success-subtle {
        background-color: #f0fff4 !important;
    }

    .btn-white {
        background-color: #fff;
        border: 1px solid #eee;
    }

        .btn-white:hover {
            background-color: #f8f9fa;
        }

    .hover-up {
        transition: all 0.3s ease;
    }

        .hover-up:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1) !important;
        }

    .transition {
        transition: all 0.2s ease;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0,123,255,0.02);
    }

    code {
        font-weight: 600;
        font-size: 0.9em;
        font-family: 'Consolas', 'Monaco', monospace;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    /* Hiệu ứng mờ cho hàng đã bán */
    .bg-light.bg-opacity-50 {
        opacity: 0.7;
    }
</style>