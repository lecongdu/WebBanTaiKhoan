@model List<WebBanTaiKhoan.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
    decimal total = Model?.Sum(x => x.Price * x.Quantity) ?? 0;
}

<div class="container mt-4 pb-5">
    <div class="d-flex align-items-center mb-4">
        <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
            <i class="fa-solid fa-cart-shopping fs-4 text-primary"></i>
        </div>
        <div>
            <h2 class="fw-bold mb-0">GIỎ HÀNG CỦA BẠN</h2>
            <p class="text-muted small mb-0">Hệ thống Nick3s - Kiểm tra kỹ trước khi thanh toán</p>
        </div>
    </div>

    @* THÔNG BÁO LỖI KHO HÀNG *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger shadow-sm border-0 rounded-4 alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-exclamation me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @* DANH SÁCH SẢN PHẨM *@
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 border-0">SẢN PHẨM</th>
                                    <th class="py-3 border-0 text-center">GIÁ</th>
                                    <th class="text-center py-3 border-0">SỐ LƯỢNG</th>
                                    <th class="py-3 border-0 text-center">THÀNH TIỀN</th>
                                    <th class="text-center py-3 border-0"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4 py-4">
                                            <div class="d-flex align-items-center">
                                                <img src="@item.ImageUrl" width="60" height="60" class="rounded-3 border shadow-sm me-3" style="object-fit: cover;" onerror="this.src='https://cdn-icons-png.flaticon.com/512/2767/2767146.png';" />
                                                <div>
                                                    <span class="fw-bold d-block text-dark">@item.ProductName</span>
                                                    <small class="text-muted">Mã: #@item.ProductId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center fw-medium">@item.Price.ToString("#,##0")đ</td>

                                        @* CỤM NÚT TĂNG GIẢM SỐ LƯỢNG *@
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center">
                                                <div class="input-group input-group-sm shadow-sm rounded-pill overflow-hidden border" style="width: 110px;">
                                                    <a asp-controller="Cart" asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-quantity="@(item.Quantity - 1)"
                                                       class="btn btn-white border-0"><i class="fa-solid fa-minus small"></i></a>

                                                    <span class="input-group-text bg-white border-0 fw-bold px-2 flex-grow-1 justify-content-center">@item.Quantity</span>

                                                    <a asp-controller="Cart" asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-quantity="@(item.Quantity + 1)"
                                                       class="btn btn-white border-0"><i class="fa-solid fa-plus small"></i></a>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="fw-bold text-primary text-center">@((item.Price * item.Quantity).ToString("#,##0"))đ</td>
                                        <td class="text-center pe-4">
                                            <a asp-action="Remove" asp-route-id="@item.ProductId" class="text-danger opacity-50 hover-opacity-100" onclick="return confirm('Xóa sản phẩm?')">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/" class="btn btn-link text-decoration-none fw-bold small"><i class="fa-solid fa-arrow-left me-1"></i> Quay lại chọn thêm</a>
                </div>
            </div>

            @* TỔNG KẾT THANH TOÁN *@
            <div class="col-lg-4">
                <div class="card border-0 shadow-lg rounded-4 p-4 bg-white sticky-top" style="top: 20px;">
                    <h5 class="fw-bold mb-4 border-bottom pb-2 text-uppercase">Tóm tắt đơn hàng</h5>
                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Tạm tính:</span>
                        <span class="fw-bold text-dark">@total.ToString("#,##0")đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4 text-muted">
                        <span>Giảm giá:</span>
                        <span class="text-success fw-bold">0đ</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fs-5 fw-bold">Tổng cộng:</span>
                        <span class="fs-4 fw-bold text-danger">@total.ToString("#,##0")đ</span>
                    </div>

                    <form asp-action="Checkout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary w-100 fw-bold py-3 rounded-pill shadow-lg btn-checkout">
                            <i class="fa-solid fa-credit-card me-2"></i>THANH TOÁN NGAY
                        </button>
                    </form>

                    <div class="mt-4 p-3 bg-light rounded-3 small text-muted">
                        <i class="fa-solid fa-shield-halved me-1 text-success"></i>
                        Tài khoản sẽ được gửi tự động vào lịch sử đơn hàng ngay sau khi thanh toán.
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-white shadow-sm rounded-4 mt-5">
            <i class="fa-solid fa-cart-plus display-1 text-light-emphasis mb-4 opacity-25"></i>
            <h4 class="fw-bold text-muted">Giỏ hàng trống</h4>
            <a href="/" class="btn btn-primary px-5 py-3 rounded-pill fw-bold mt-3 shadow">ĐẾN CỬA HÀNG</a>
        </div>
    }
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .rounded-4 {
        border-radius: 1.25rem !important;
    }

    .btn-white {
        background: #fff;
    }

        .btn-white:hover {
            background: #f8f9fa;
        }

    .btn-checkout {
        background: linear-gradient(135deg, #0d6efd 0%, #0046af 100%);
        border: none;
        transition: 0.3s;
    }

        .btn-checkout:hover {
            transform: translateY(-3px);
            filter: brightness(1.1);
            box-shadow: 0 10px 20px rgba(13, 110, 253, 0.3) !important;
        }

    .hover-opacity-100:hover {
        opacity: 1 !important;
    }
</style>