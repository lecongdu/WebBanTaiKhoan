@model List<WebBanTaiKhoan.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
    decimal total = Model?.Sum(x => x.Price * x.Quantity) ?? 0;
}

<div class="container mt-4 pb-5">
    <h2 class="fw-bold mb-4"><i class="fa-solid fa-cart-shopping me-2 text-primary"></i>GIỎ HÀNG CỦA BẠN</h2>

    @* HIỂN THỊ LỖI NẾU KHÔNG ĐỦ KHO *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger shadow-sm border-0 alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @* DANH SÁCH SẢN PHẨM *@
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3">Sản phẩm</th>
                                    <th>Giá</th>
                                    <th class="text-center">Số lượng</th>
                                    <th>Thành tiền</th>
                                    <th class="text-center">Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <img src="@item.ImageUrl" width="60" height="60" class="rounded me-3 border shadow-sm" style="object-fit: cover;" onerror="this.src='https://cdn-icons-png.flaticon.com/512/2767/2767146.png';" />
                                                <div>
                                                    <span class="fw-bold d-block text-dark">@item.ProductName</span>
                                                    <small class="text-muted">Mã SP: #@item.ProductId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.Price.ToString("#,##0")đ</td>

                                        @* CỤM NÚT TĂNG GIẢM SỐ LƯỢNG *@
                                        <td class="text-center">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <div class="input-group input-group-sm shadow-sm" style="width: 100px;">
                                                    @* Nút Giảm *@
                                                    <a asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-quantity="@(item.Quantity - 1)"
                                                       class="btn btn-outline-secondary border-end-0">
                                                        <i class="fa-solid fa-minus small"></i>
                                                    </a>

                                                    @* Ô hiển thị số lượng *@
                                                    <span class="form-control text-center fw-bold bg-white border-start-0 border-end-0" style="cursor: default;">
                                                        @item.Quantity
                                                    </span>

                                                    @* Nút Tăng *@
                                                    <a asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-quantity="@(item.Quantity + 1)"
                                                       class="btn btn-outline-secondary border-start-0">
                                                        <i class="fa-solid fa-plus small"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="fw-bold text-primary">@((item.Price * item.Quantity).ToString("#,##0"))đ</td>
                                        <td class="text-center">
                                            <a asp-action="Remove" asp-route-id="@item.ProductId"
                                               class="btn btn-sm btn-light text-danger rounded-circle shadow-sm"
                                               onclick="return confirm('Xóa sản phẩm này khỏi giỏ hàng?')">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="mt-3">
                    <a href="/" class="text-decoration-none fw-bold"><i class="fa-solid fa-arrow-left me-2"></i>Tiếp tục chọn thêm tài khoản</a>
                </div>
            </div>

            @* TỔNG KẾT THANH TOÁN *@
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-3 p-4 bg-white sticky-top" style="top: 20px; z-index: 10;">
                    <h5 class="fw-bold mb-4 border-bottom pb-2">CHI TIẾT THANH TOÁN</h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tạm tính:</span>
                        <span class="fw-bold">@total.ToString("#,##0")đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="text-muted">Giảm giá:</span>
                        <span class="text-success fw-bold">0đ</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between mb-4">
                        <span class="fs-5 fw-bold">Tổng cộng:</span>
                        <span class="fs-4 fw-bold text-danger">@total.ToString("#,##0")đ</span>
                    </div>

                    <form asp-action="Checkout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary w-100 fw-bold py-3 rounded-pill shadow btn-checkout">
                            <i class="fa-solid fa-credit-card me-2"></i>THANH TOÁN NGAY
                        </button>
                    </form>

                    <div class="mt-4 p-3 bg-light rounded-3 small">
                        <p class="mb-1 text-muted fw-bold"><i class="fa-solid fa-shield-halved me-2 text-success"></i>Bảo mật thanh toán</p>
                        <p class="mb-0 text-muted">Hệ thống gửi tài khoản tự động ngay sau khi thanh toán thành công.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-white shadow-sm rounded-3 mt-5">
            <img src="https://cdn-icons-png.flaticon.com/512/2038/2038854.png" width="120" class="mb-4 opacity-50" />
            <h4 class="fw-bold text-muted">Giỏ hàng của bạn đang trống!</h4>
            <p class="text-muted mb-4">Hãy chọn cho mình những tài khoản chất lượng nhất tại Nick3s.</p>
            <a href="/" class="btn btn-primary px-5 py-3 rounded-pill fw-bold shadow">
                <i class="fa-solid fa-store me-2"></i>ĐẾN CỬA HÀNG NGAY
            </a>
        </div>
    }
</div>

<style>
    /* HIỆU ỨNG CHO NÚT THANH TOÁN */
    .btn-checkout {
        transition: all 0.3s;
        background: linear-gradient(45deg, #007bff, #0056b3);
        border: none;
    }

        .btn-checkout:hover {
            transform: scale(1.02);
            filter: brightness(1.1);
            box-shadow: 0 8px 20px rgba(0,123,255,0.4) !important;
        }

    /* ĐỊNH DẠNG BẢNG */
    .table thead th {
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #6c757d;
    }
</style>