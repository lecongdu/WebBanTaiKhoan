@model IEnumerable<WebBanTaiKhoan.Models.BankAccount>
@{
    ViewData["Title"] = "Dashboard Quản Trị";
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid pb-5 px-4">
    @* --- HEADER --- *@
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <div>
            <h1 class="fw-bold text-dark mb-1">⚡ TRUNG TÂM ĐIỀU KHIỂN</h1>
            <p class="text-muted small">Chào mừng @(isAdmin ? "Quản trị viên" : "Cộng tác viên"): <b class="text-primary">@User.Identity.Name</b></p>
        </div>
        <div class="text-end">
            <div id="clock" class="fw-bold text-primary fs-5 mb-1"></div>
            <span class="badge bg-success-subtle text-success border border-success px-3 rounded-pill shadow-sm">Hệ thống: Online</span>
        </div>
    </div>

    @* --- KHỐI 1: THỐNG KÊ NHANH --- *@
    <div class="row mb-4">
        @if (isAdmin)
        {
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm rounded-4 bg-primary text-white h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="fa-solid fa-sack-dollar fs-2 opacity-50"></i>
                            <span class="badge bg-white bg-opacity-25 rounded-pill small">Doanh thu</span>
                        </div>
                        <h3 class="fw-bold mb-0">@ViewBag.Revenue.ToString("#,##0") đ</h3>
                        <p class="small mb-0 opacity-75">Tổng tiền tích lũy</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm rounded-4 bg-info text-white h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <i class="fa-solid fa-cart-shopping fs-2 opacity-50"></i>
                            <span class="badge bg-white bg-opacity-25 rounded-pill small">Đơn hàng</span>
                        </div>
                        <h3 class="fw-bold mb-0">@ViewBag.Orders</h3>
                        <p class="small mb-0 opacity-75">Giao dịch thành công</p>
                    </div>
                </div>
            </div>
        }

        <div class="@(isAdmin ? "col-md-3" : "col-md-6") mb-3">
            <div class="card border-0 shadow-sm rounded-4 bg-success text-white h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <i class="fa-solid fa-warehouse fs-2 opacity-50"></i>
                        <span class="badge bg-white bg-opacity-25 rounded-pill small">Tồn kho</span>
                    </div>
                    <h3 class="fw-bold mb-0">@ViewBag.Accounts</h3>
                    <p class="small mb-0 opacity-75">Tài khoản sẵn có</p>
                </div>
            </div>
        </div>

        <div class="@(isAdmin ? "col-md-3" : "col-md-6") mb-3">
            <div class="card border-0 shadow-sm rounded-4 bg-dark text-white h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <i class="fa-solid fa-box-open fs-2 opacity-50"></i>
                        <span class="badge bg-white bg-opacity-25 rounded-pill small">Dịch vụ</span>
                    </div>
                    <h3 class="fw-bold mb-0">@ViewBag.Products</h3>
                    <p class="small mb-0 opacity-75">Sản phẩm đang bán</p>
                </div>
            </div>
        </div>
    </div>

    @* --- KHỐI 2: BIỂU ĐỒ & CÔNG CỤ --- *@
    @if (isAdmin)
    {
        <div class="row mb-5">
            <div class="col-lg-8 mb-4">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4 text-secondary">
                            <i class="fa-solid fa-chart-area me-2 text-primary"></i>TĂNG TRƯỞNG DOANH THU (7 NGÀY)
                        </h5>
                        <div style="height: 300px;">
                            <canvas id="revenueChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm rounded-4 bg-dark text-white h-100 overflow-hidden position-relative">
                    <div class="card-body p-4 z-index-1">
                        <h5 class="fw-bold text-warning mb-3"><i class="fa-solid fa-paint-brush me-2"></i>CẤU HÌNH SHOP</h5>
                        <p class="small text-white-50 mb-4">Thay đổi Banner, Hotline, Zalo, Mã nhúng bản đồ và thông tin chân trang của bạn.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="SystemSettings" asp-action="Index" class="btn btn-warning fw-bold py-2 rounded-pill shadow">⚙️ VÀO CÀI ĐẶT</a>
                        </div>
                    </div>
                    <i class="fa-solid fa-gear position-absolute end-0 bottom-0 opacity-10" style="font-size: 150px; transform: translate(30%, 30%)"></i>
                </div>
            </div>
        </div>
    }

    @* --- KHỐI 3: PHÂN KHU QUẢN TRỊ (ĐÃ THÊM CHIẾT KHẤU) --- *@
    <div class="row gx-3">
        <div class="col-12 mb-3">
            <h3 class="fw-bold text-uppercase fs-6 text-secondary"><i class="fa-solid fa-toolbox me-2"></i>Phân khu làm việc</h3>
        </div>

        @if (isAdmin)
        {
            @* 1. THÀNH VIÊN *@
            <div class="col-xl-2 col-md-4 col-6 mb-4">
                <div class="card h-100 shadow-sm border-0 border-top border-info border-4 rounded-4 p-2">
                    <div class="card-body text-center p-3">
                        <div class="bg-info bg-opacity-10 text-info p-3 rounded-circle d-inline-block mb-3">
                            <i class="fa-solid fa-users-gear fs-4"></i>
                        </div>
                        <h6 class="fw-bold text-dark mb-1 small">Thành Viên</h6>
                        <p class="x-small text-muted mb-3" style="height: 35px;">Quản lý người dùng và số dư.</p>
                        <a asp-controller="Users" asp-action="Index" class="btn btn-info w-100 rounded-pill fw-bold text-white btn-sm py-2 shadow-sm">QUẢN LÝ</a>
                    </div>
                </div>
            </div>

            @* 2. DUYỆT NẠP *@
            <div class="col-xl-2 col-md-4 col-6 mb-4">
                <div class="card h-100 shadow-sm border-0 border-top border-warning border-4 rounded-4 p-2">
                    <div class="card-body text-center p-3">
                        <div class="bg-warning bg-opacity-10 text-warning p-3 rounded-circle d-inline-block mb-3">
                            <i class="fa-solid fa-money-bill-transfer fs-4"></i>
                        </div>
                        <h6 class="fw-bold text-dark mb-1 small">Duyệt Nạp</h6>
                        <p class="x-small text-muted mb-3" style="height: 35px;">Xác thực giao dịch ATM/Thẻ.</p>
                        <a asp-controller="Admin" asp-action="TopUpManager" class="btn btn-warning w-100 rounded-pill fw-bold btn-sm py-2 text-white shadow-sm">KIỂM TRA</a>
                    </div>
                </div>
            </div>

            @* 🔴 7. CHIẾT KHẤU (MỚI THÊM) *@
            <div class="col-xl-2 col-md-4 col-6 mb-4">
                <div class="card h-100 shadow-sm border-0 border-top border-danger border-4 rounded-4 p-2">
                    <div class="card-body text-center p-3">
                        <div class="bg-danger bg-opacity-10 text-danger p-3 rounded-circle d-inline-block mb-3">
                            <i class="fa-solid fa-percent fs-4"></i>
                        </div>
                        <h6 class="fw-bold text-dark mb-1 small">Chiết Khấu</h6>
                        <p class="x-small text-muted mb-3" style="height: 35px;">Cài đặt thực nhận cho thẻ cào.</p>
                        <a asp-controller="Admin" asp-action="ManageDiscounts" class="btn btn-danger w-100 rounded-pill fw-bold btn-sm py-2 text-white shadow-sm">BẢNG GIÁ</a>
                    </div>
                </div>
            </div>
        }

        @* 3. SẢN PHẨM *@
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card h-100 shadow-sm border-0 border-top border-primary border-4 rounded-4 p-2">
                <div class="card-body text-center p-3">
                    <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-circle d-inline-block mb-3">
                        <i class="fa-solid fa-boxes-stacked fs-4"></i>
                    </div>
                    <h6 class="fw-bold text-dark mb-1 small">Sản Phẩm</h6>
                    <p class="x-small text-muted mb-3" style="height: 35px;">Giá và mô tả sản phẩm.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary w-100 rounded-pill fw-bold text-white btn-sm py-2 shadow-sm">DỊCH VỤ</a>
                </div>
            </div>
        </div>

        @* 4. DANH MỤC *@
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card h-100 shadow-sm border-0 border-top border-success border-4 rounded-4 p-2">
                <div class="card-body text-center p-3">
                    <div class="bg-success bg-opacity-10 text-success p-3 rounded-circle d-inline-block mb-3">
                        <i class="fa-solid fa-tags fs-4"></i>
                    </div>
                    <h6 class="fw-bold text-dark mb-1 small">Danh Mục</h6>
                    <p class="x-small text-muted mb-3" style="height: 35px;">Phân loại nhóm tài khoản.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-success w-100 rounded-pill fw-bold text-white btn-sm py-2 shadow-sm">NHÓM</a>
                </div>
            </div>
        </div>

        @* 5. KHO ACC *@
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card h-100 shadow-sm border-0 border-top border-secondary border-4 rounded-4 p-2">
                <div class="card-body text-center p-3">
                    <div class="bg-secondary bg-opacity-10 text-secondary p-3 rounded-circle d-inline-block mb-3">
                        <i class="fa-solid fa-key fs-4"></i>
                    </div>
                    <h6 class="fw-bold text-dark mb-1 small">Kho Acc</h6>
                    <p class="x-small text-muted mb-3" style="height: 35px;">Quản lý dữ liệu tài khoản lẻ.</p>
                    <a asp-controller="AccountItems" asp-action="Index" class="btn btn-secondary w-100 rounded-pill fw-bold text-white btn-sm py-2 shadow-sm">KHO HÀNG</a>
                </div>
            </div>
        </div>

        @if (isAdmin)
        {
            @* 6. NGÂN HÀNG *@
            <div class="col-xl-2 col-md-4 col-6 mb-4">
                <div class="card h-100 shadow-sm border-0 border-top border-indigo border-4 rounded-4 p-2">
                    <div class="card-body text-center p-3">
                        <div class="bg-indigo bg-opacity-10 text-indigo p-3 rounded-circle d-inline-block mb-3">
                            <i class="fa-solid fa-building-columns fs-4"></i>
                        </div>
                        <h6 class="fw-bold text-dark mb-1 small">Ngân Hàng</h6>
                        <p class="x-small text-muted mb-3" style="height: 35px;">Cấu hình STK & mã QR.</p>
                        <a asp-controller="BankAccounts" asp-action="Index" class="btn btn-indigo w-100 rounded-pill fw-bold text-white btn-sm py-2 shadow-sm">BANKING</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function updateClock() {
            const now = new Date();
            document.getElementById('clock').innerHTML = `<i class="fa-regular fa-clock me-1"></i> ${now.toLocaleTimeString('vi-VN')} - ${now.toLocaleDateString('vi-VN')}`;
        }
        setInterval(updateClock, 1000);
        updateClock();

        @if (isAdmin)
        {
                <text>
                const ctx = document.getElementById('revenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: @Html.Raw(Json.Serialize(ViewBag.ChartLabels)),
                        datasets: [{
                            label: 'Doanh thu (VNĐ)',
                            data: @Html.Raw(Json.Serialize(ViewBag.ChartValues)),
                            borderColor: '#0061ff',
                            backgroundColor: 'rgba(0, 97, 255, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            pointBackgroundColor: '#fff',
                            pointBorderColor: '#0061ff',
                            pointRadius: 6
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: true, ticks: { callback: (v) => v.toLocaleString('vi-VN') + ' đ' } }
                        }
                    }
                });
                </text>
        }
    </script>
}

<style>
    .card {
        transition: all 0.3s cubic-bezier(.25,.8,.25,1);
        border-radius: 1.2rem !important;
    }

        .card:hover {
            transform: translateY(-7px);
            box-shadow: 0 14px 28px rgba(0,0,0,0.1), 0 10px 10px rgba(0,0,0,0.05) !important;
        }

    .rounded-4 {
        border-radius: 1.2rem !important;
    }

    .x-small {
        font-size: 0.7rem;
        line-height: 1.2;
    }

    .bg-primary {
        background: linear-gradient(45deg, #0061ff, #60efff) !important;
    }

    .bg-info {
        background: linear-gradient(45deg, #17adff, #88d3ff) !important;
    }

    .bg-success {
        background: linear-gradient(45deg, #2dce89, #2dcecc) !important;
    }

    .bg-indigo {
        background: linear-gradient(45deg, #6610f2, #a260f6) !important;
    }

    .bg-danger {
        background: linear-gradient(45deg, #f5365c, #f56036) !important;
    }

    .bg-secondary {
        background: linear-gradient(45deg, #8898aa, #ced4da) !important;
    }

    .text-indigo {
        color: #6610f2 !important;
    }

    .btn-indigo {
        background-color: #6610f2;
        border-color: #6610f2;
    }

        .btn-indigo:hover {
            background-color: #520dc2;
            border-color: #520dc2;
        }
</style>