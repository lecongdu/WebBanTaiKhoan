@model IEnumerable<WebBanTaiKhoan.Models.Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="fa-solid fa-layer-group me-2"></i>QUẢN LÝ DANH MỤC</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm rounded-pill px-4">
            <i class="fa-solid fa-plus me-1"></i> Thêm danh mục mới
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Tên danh mục</th>
                        <th class="py-3">Mô tả</th>
                        <th class="text-end pe-4 py-3">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3 fw-bold text-dark">
                                <span class="badge bg-primary-subtle text-primary p-2">@item.Name</span>
                            </td>
                            <td class="py-3 text-muted">@item.Description</td>
                            <td class="text-end pe-4 py-3">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1"><i class="fa-solid fa-pen"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>