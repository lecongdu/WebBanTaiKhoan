@model IEnumerable<WebBanTaiKhoan.Models.Category>

@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <div class="mb-2">
                <a href="/Admin" class="btn btn-outline-secondary btn-sm rounded-pill px-3 border-2">
                    <i class="fa-solid fa-arrow-left me-1"></i> Trở lại Admin
                </a>
            </div>
            <h2 class="fw-bold text-dark mb-0">
                <i class="fa-solid fa-layer-group text-primary me-2"></i>QUẢN LÝ DANH MỤC
            </h2>
            <p class="text-muted small mb-0">Quản lý các nhóm sản phẩm hiển thị trên hệ thống</p>
        </div>

        <a asp-action="Create" class="btn btn-primary shadow rounded-pill px-4 py-2 fw-bold hover-up">
            <i class="fa-solid fa-plus-circle me-1"></i> THÊM DANH MỤC MỚI
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="ps-4 py-3 border-0">TÊN DANH MỤC</th>
                            <th class="py-3 border-0">MÔ TẢ CHI TIẾT</th>
                            <th class="text-center py-3 border-0" style="width: 150px;">THAO TÁC</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="transition">
                                <td class="ps-4 py-4">
                                    <div class="d-flex align-items-center">
                                        <div class="category-icon me-3 bg-primary-subtle text-primary">
                                            <i class="fa-solid fa-folder-open"></i>
                                        </div>
                                        <span class="fw-bold text-dark fs-6">@item.Name</span>
                                    </div>
                                </td>
                                <td class="py-4 text-muted">
                                    <span class="d-inline-block text-truncate" style="max-width: 400px;">
                                        @(string.IsNullOrEmpty(item.Description) ? "Không có mô tả" : item.Description)
                                    </span>
                                </td>
                                <td class="text-center pe-4 py-4">
                                    <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-white text-primary border-end"
                                           title="Chỉnh sửa">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-white text-danger"
                                           title="Xóa danh mục">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* Màu nền tổng thể cho chuyên nghiệp */
        body {
            background-color: #f8f9fa;
        }

        /* Hiệu ứng bo góc và đổ bóng cho icon */
        .category-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 1.1rem;
        }

        /* Hiệu ứng hover cho nút Thêm mới */
        .hover-up {
            transition: all 0.3s ease;
        }

            .hover-up:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 15px rgba(13, 110, 253, 0.3) !important;
            }

        /* Hiệu ứng khi lướt chuột qua dòng trong bảng */
        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.03);
        }

        .transition {
            transition: all 0.2s ease;
        }

        /* Tùy chỉnh cụm nút thao tác (Edit/Delete) */
        .btn-white {
            background-color: #fff;
            border: 1px solid #dee2e6;
            padding: 8px 12px;
        }

            .btn-white:hover {
                background-color: #f8f9fa;
            }

        /* Header bảng chuyên nghiệp */
        .bg-primary {
            background: linear-gradient(135deg, #0d6efd 0%, #0046af 100%) !important;
        }

        .rounded-4 {
            border-radius: 1rem !important;
        }
    </style>
}