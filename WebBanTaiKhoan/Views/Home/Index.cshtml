@model IEnumerable<WebBanTaiKhoan.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
    var settings = ViewBag.Settings as WebBanTaiKhoan.Models.SystemSetting;
    var searchTerm = ViewBag.CurrentSearch as string;
    var currentCategoryId = ViewBag.CurrentCategoryId as int?;
    var categories = ViewBag.Categories as List<WebBanTaiKhoan.Models.Category>;
}

<div class="container mt-3 pb-5">
    @* --- 🟢 KHỐI ĐẦU TRANG: DANH MỤC TRÁI (ICON + CHỮ TO) - BANNER PHẢI --- *@
    <div class="row g-3 mb-4">
        @* 1. DANH MỤC NỔI BẬT (Bên trái - 4 cột) *@
        <div class="col-lg-4 col-md-12">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-3 bg-white">
                <h6 class="fw-bold mb-3 text-uppercase small text-muted"><i class="fa-solid fa-list-ul me-2"></i>DANH MỤC DỊCH VỤ</h6>
                <div class="row g-2 no-scrollbar" style="max-height: 300px; overflow-y: auto;">

                    @* 🔵 NÚT TẤT CẢ SẢN PHẨM - LUÔN NẰM ĐẦU *@
                    <div class="col-6">
                        <a asp-action="Index" asp-route-categoryId="" class="cat-item p-3 rounded-3 text-center border d-block text-decoration-none text-dark hover-up @(currentCategoryId == null ? "border-primary bg-light-blue fw-bold text-primary" : "")">
                            <i class="fa-solid fa-border-all fs-5 d-block mb-1"></i>
                            <div class="fw-bold fs-6 text-truncate">Tất cả</div>
                        </a>
                    </div>

                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            // 🟢 LOGIC FIX LỖI ICON: Chuyển hết sang chữ thường để so sánh cho chuẩn
                            string iconClass = "fa-solid fa-box";
                            var name = cat.Name.ToLower();

                            if (name.Contains("game") || name.Contains("liên quân") || name.Contains("free fire"))
                                iconClass = "fa-solid fa-gamepad";
                            else if (name.Contains("giải trí") || name.Contains("netflix") || name.Contains("youtube"))
                                iconClass = "fa-solid fa-clapperboard";
                            else if (name.Contains("học tập") || name.Contains("key") || name.Contains("office") || name.Contains("tiếng anh"))
                                iconClass = "fa-solid fa-book-open";
                            else if (name.Contains("ai") || name.Contains("chatgpt"))
                                iconClass = "fa-solid fa-robot";
                            // 🔴 ĐOẠN FIX CHO VPN / BẢO MẬT ĐÂY MÀY:
                            else if (name.Contains("vpn") || name.Contains("bảo mật") || name.Contains("security"))
                                iconClass = "fa-solid fa-user-shield";
                            else if (name.Contains("làm việc") || name.Contains("design") || name.Contains("canva"))
                                iconClass = "fa-solid fa-briefcase";

                            <div class="col-6">
                                <a asp-action="Index" asp-route-categoryId="@cat.Id" class="cat-item p-3 rounded-3 text-center border d-block text-decoration-none text-dark hover-up @(currentCategoryId == cat.Id ? "border-primary bg-light-blue fw-bold text-primary" : "")">
                                    <i class="@iconClass fs-5 d-block mb-1"></i>
                                    <div class="fw-bold fs-6 text-truncate">@cat.Name</div>
                                </a>
                            </div>
                        }
                    }
                </div>

                @* KHỐI CAM KẾT (Dưới danh mục) *@
                <div class="mt-auto pt-3">
                    <div class="p-3 bg-success bg-opacity-10 rounded-3 border border-success border-opacity-25 text-success shadow-sm">
                        <h6 class="fw-bold mb-1 small"><i class="fa-solid fa-check-double me-2"></i>Uy tín hàng đầu</h6>
                        <p class="x-small mb-0 opacity-75">Hệ thống nạp rút tự động, bảo hành siêu tốc.</p>
                    </div>
                </div>
            </div>
        </div>

        @* 2. BANNER CHÍNH (Bên phải - 8 cột) *@
        <div class="col-lg-8 col-md-12">
            <div id="homeBannerCarousel" class="carousel slide shadow-sm rounded-4 overflow-hidden border h-100" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#homeBannerCarousel" data-bs-slide-to="0" class="active"></button>
                    @if (settings != null && !string.IsNullOrEmpty(settings.BannerUrl2))
                    {
                        <button type="button" data-bs-target="#homeBannerCarousel" data-bs-slide-to="1"></button>
                    }
                    @if (settings != null && !string.IsNullOrEmpty(settings.BannerUrl3))
                    {
                        <button type="button" data-bs-target="#homeBannerCarousel" data-bs-slide-to="2"></button>
                    }
                </div>
                <div class="carousel-inner h-100">
                    <div class="carousel-item active h-100" data-bs-interval="5000">
                        <img src="@(settings?.BannerUrl ?? "/images/banner1.jpg")" class="d-block w-100 object-fit-cover" style="height: 400px;" alt="Banner 1">
                    </div>
                    @if (settings != null && !string.IsNullOrEmpty(settings.BannerUrl2))
                    {
                        <div class="carousel-item h-100" data-bs-interval="5000">
                            <img src="@settings.BannerUrl2" class="d-block w-100 object-fit-cover" style="height: 400px;" alt="Banner 2">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#homeBannerCarousel" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span></button>
                <button class="carousel-control-next" type="button" data-bs-target="#homeBannerCarousel" data-bs-slide="next"><span class="carousel-control-next-icon"></span></button>
            </div>
        </div>
    </div>

    @* --- THÔNG BÁO CHỮ CHẠY --- *@
    @if (settings != null && !string.IsNullOrEmpty(settings.MarqueeText))
    {
        <div class="alert bg-white d-flex align-items-center mb-4 shadow-sm p-1 border-0 rounded-pill">
            <span class="badge bg-danger ms-2 px-3 py-2 rounded-pill shadow-sm animate-pulse">🔥 THÔNG BÁO</span>
            <marquee class="fw-bold text-danger ms-3" scrollamount="8">@settings.MarqueeText</marquee>
        </div>
    }

    @* --- TIÊU ĐỀ KHỐI SẢN PHẨM --- *@
    <div class="d-flex justify-content-between align-items-center mb-4 mt-5">
        <h4 class="fw-bold text-dark mb-0 border-start border-primary border-4 ps-2 text-uppercase">
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <span>Tìm kiếm: "@searchTerm"</span>
            }
            else if (currentCategoryId != null)
            {

                <span>Danh mục: @(Model.FirstOrDefault()?.Category?.Name ?? "Sản phẩm")</span>
            }
            else
            {

                <span>KHO SẢN PHẨM MỚI NHẤT</span>
            }
        </h4>
        <a asp-action="Index" asp-route-categoryId="" class="btn btn-sm btn-light rounded-pill border fw-bold text-primary px-3 shadow-sm">Xem tất cả <i class="fa-solid fa-angles-right ms-1 x-small"></i></a>
    </div>

    @* --- DANH SÁCH SẢN PHẨM --- *@
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted py-5 bg-white rounded-4 shadow-sm border border-dashed">
                <i class="fa-solid fa-box-open fs-1 mb-3 opacity-25"></i>
                <h5>Không tìm thấy sản phẩm...</h5>
                <a asp-action="Index" class="btn btn-primary btn-sm mt-2 rounded-pill">Quay lại trang chủ</a>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 card-product shadow-sm border-0 position-relative bg-white p-2">
                        @if (item.SoldQuantity >= 5)
                        {
                            <div class="position-absolute top-0 end-0 m-2" style="z-index: 10;">
                                <span class="badge bg-danger rounded-pill shadow-sm x-small px-2">
                                    <i class="fa-solid fa-fire me-1"></i> HOT
                                </span>
                            </div>
                        }

                        <div class="card-img-container p-2 text-center">
                            <a asp-action="ProductDetail" asp-route-id="@item.Id">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                                     class="card-img-top img-fluid rounded transition-all" style="height: 140px; object-fit: contain;" />
                            </a>
                        </div>

                        <div class="card-body pt-1 d-flex flex-column text-center">
                            <h6 class="card-title fw-bold text-dark mb-2 product-name">
                                <a asp-action="ProductDetail" asp-route-id="@item.Id" class="text-decoration-none text-dark">@item.Name</a>
                            </h6>

                            <div class="mb-2">
                                @if (item.StockQuantity > 0)
                                {
                                    <span class="x-small text-success fw-bold"><i class="fa-solid fa-check me-1"></i>Còn @item.StockQuantity</span>
                                }
                                else
                                {
                                    <span class="x-small text-danger fw-bold"><i class="fa-solid fa-circle-xmark me-1"></i>Hết hàng</span>
                                }
                                <div class="x-small text-muted mt-1">Đã bán: @item.SoldQuantity</div>
                            </div>

                            <div class="mt-auto">
                                <div class="text-danger fw-bold fs-6 mb-2">@item.Price.ToString("#,##0")đ</div>
                                <a asp-action="ProductDetail" asp-route-id="@item.Id" class="btn btn-primary w-100 fw-bold rounded-pill py-1 shadow-sm border-0 small">
                                    XEM CHI TIẾT
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    /* GRID 5 CỘT */
    @@media (min-width: 992px) {
        .row-cols-lg-5 > * {
            flex: 0 0 20%;
            max-width: 20%;
        }
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .x-small {
        font-size: 0.7rem;
    }

    .bg-light-blue {
        background-color: #eef4ff !important;
    }

    /* STYLE DANH MỤC */
    .cat-item {
        background: #f8f9fa;
        border: 1px solid #f1f3f5 !important;
        transition: all 0.3s ease;
        color: #4a5568;
        min-height: 95px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .cat-item i {
            color: var(--nick3s-primary);
            opacity: 0.8;
            margin-bottom: 5px;
        }

        .cat-item .fs-6 {
            font-size: 15px !important;
            letter-spacing: -0.3px;
        }

        .cat-item:hover {
            background: #fff;
            border-color: var(--nick3s-primary) !important;
            color: var(--nick3s-primary) !important;
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
        }

            .cat-item:hover i {
                transform: scale(1.2);
                opacity: 1;
            }

    .card-product {
        transition: all 0.3s ease;
        border-radius: 15px;
    }

        .card-product:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.1) !important;
        }

    .product-name {
        font-size: 13px;
        height: 38px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .animate-pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }

    .no-scrollbar::-webkit-scrollbar {
        width: 4px;
    }

    .no-scrollbar::-webkit-scrollbar-thumb {
        background: #ddd;
        border-radius: 10px;
    }
</style>