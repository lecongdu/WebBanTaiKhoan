@model IEnumerable<WebBanTaiKhoan.Models.BankAccount>
@{
    ViewData["Title"] = "Nạp tiền vào ví";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string username = User.Identity?.Name ?? "KHACH";
    string codeNap = System.Text.RegularExpressions.Regex.Replace(username.Split('@')[0], "[^a-zA-Z0-9]", "").ToUpper();
    string transferContent = $"NAP {codeNap}";

    var customCss = @"
        .hover-up:hover { transform: translateY(-3px); transition: 0.3s; }
        .success-box { background: #ffffff; border-radius: 20px; padding: 50px 30px; text-align: center; }
        .qr-card { border: 2px dashed #dee2e6; border-radius: 15px; padding: 20px; background: #fff; }
        .header-logo-container { width: 60px; height: 60px; background: white; border-radius: 12px; display: flex; align-items: center; justify-content: center; overflow: hidden; padding: 5px; border: 2px solid rgba(255,255,255,0.2); }
        .note-danger { background: #fff5f5; border-left: 4px solid #f56565; color: #c53030; }
        .nav-pills .nav-link { color: #4a5568; font-weight: 700; border-radius: 10px; padding: 12px 25px; transition: 0.3s; border: 1px solid #edf2f7; margin-right: 10px; }
        .nav-pills .nav-link.active { background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%); color: white; border-color: transparent; box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3); }
        .card-type-label { font-size: 12px; font-weight: 800; color: #adb5bd; text-transform: uppercase; margin-bottom: 8px; display: block; }
    ";
}

<style>
    @Html.Raw(customCss)
</style>

<div class="container py-5">
    @if (TempData["DepositSuccess"] != null)
    {
        <div class="row justify-content-center animate__animated animate__fadeIn">
            <div class="col-md-7 text-center success-box shadow-lg border-top border-5 border-success">
                <div class="mb-4"><i class="fa-solid fa-circle-check text-success" style="font-size: 90px;"></i></div>
                <h2 class="fw-bold text-dark mb-3">Yêu cầu nạp đã gửi!</h2>
                <p class="fs-5 text-muted mb-5">Vui lòng chờ Admin kiểm tra và cộng tiền vào tài khoản của bạn.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/" class="btn btn-light rounded-pill px-5 py-2 fw-bold border">Trang chủ</a>
                    <a asp-action="Deposit" class="btn btn-success rounded-pill px-5 py-2 fw-bold shadow">Tiếp tục nạp</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center mb-4">
            <div class="col-lg-11 col-xl-10 d-flex justify-content-between align-items-center">
                <a href="/" class="btn btn-outline-secondary rounded-pill px-4 btn-sm fw-bold border-2 shadow-sm hover-up"><i class="fa-solid fa-arrow-left me-2"></i> Trang chủ</a>
                <a asp-controller="Orders" asp-action="DepositHistory" class="btn btn-outline-primary rounded-pill px-4 btn-sm fw-bold border-2 shadow-sm hover-up"><i class="fa-solid fa-clock-rotate-left me-2"></i> Lịch sử nạp</a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-11 col-xl-10">
                <ul class="nav nav-pills mb-4 justify-content-center" role="tablist">
                    <li class="nav-item"><button class="nav-link active shadow-sm" id="btn-tab-bank" data-bs-toggle="pill" data-bs-target="#tab-bank" type="button">BANKING / VIETQR</button></li>
                    <li class="nav-item"><button class="nav-link shadow-sm" id="btn-tab-card" data-bs-toggle="pill" data-bs-target="#tab-card" type="button">NẠP THẺ CÀO</button></li>
                </ul>

                <div class="tab-content">
                    @* TAB 1: BANK *@
                    <div class="tab-pane fade show active" id="tab-bank">
                        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                            <div class="card-header border-0 p-4" style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
                                <div class="d-flex align-items-center justify-content-center text-white text-center">
                                    <div class="header-logo-container shadow-sm me-3 bg-white">
                                        <img id="headerBankLogo" src="@(Model.FirstOrDefault()?.LogoUrl ?? "/images/default-bank.png")" class="img-fluid" style="max-height: 100%; object-fit: contain;">
                                    </div>
                                    <div>
                                        <h3 class="fw-bold mb-0 text-uppercase">Chuyển khoản Ngân hàng</h3>
                                        <p class="mb-0 opacity-75 small">Nạp qua VietQR - Nhận 100% giá trị</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="row g-0">
                                    <div class="col-md-6 p-4 p-lg-5 bg-white border-end">
                                        <h5 class="fw-bold mb-4 text-primary">1. Thông tin khoản nạp</h5>
                                        <div class="mb-4">
                                            <label class="form-label fw-bold text-muted small">CHỌN NGÂN HÀNG</label>
                                            <select id="selectBank" class="form-select border-2" onchange="updateBankInfo()">
                                                @foreach (var bank in Model)
                                                {
                                                    <option value="@bank.AccountNumber" data-bankname="@bank.BankName" data-accountname="@bank.AccountName" data-logo="@bank.LogoUrl">@bank.BankName - @bank.AccountNumber</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label fw-bold text-muted small">SỐ TIỀN MUỐN NẠP</label>
                                            <div class="input-group input-group-lg">
                                                <input type="number" id="bankAmountInput" class="form-control border-2 fw-bold text-success" placeholder="Tối thiểu 10,000" min="10000" oninput="resetQR()">
                                                <span class="input-group-text bg-light border-2 fw-bold">VNĐ</span>
                                            </div>
                                        </div>
                                        <div class="p-3 rounded-3 mb-4" style="background-color: #fff9db; border: 1px dashed #fab005;">
                                            <label class="d-block text-muted small fw-bold mb-1">NỘI DUNG CHUYỂN KHOẢN:</label>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fs-4 fw-bold text-danger">@transferContent</span>
                                                <button class="btn btn-sm btn-dark rounded-pill px-3" onclick="copyToClipboard('@transferContent')">Copy</button>
                                            </div>
                                        </div>
                                        <button type="button" onclick="runGenerateQR()" class="btn btn-primary w-100 py-3 rounded-3 fw-bold fs-5 shadow-lg">TẠO MÃ QR THANH TOÁN</button>
                                    </div>
                                    <div class="col-md-6 p-4 p-lg-5 bg-light d-flex flex-column align-items-center justify-content-center text-center">
                                        <div id="qrPlaceholder" class="py-5">
                                            <i class="fa-solid fa-qrcode text-muted mb-3" style="font-size: 80px;"></i>
                                            <p class="text-muted small fw-bold">Mã QR sẽ hiện ở đây</p>
                                        </div>
                                        <div id="qrContainer" style="display: none;" class="w-100 animate__animated animate__zoomIn">
                                            <div class="qr-card shadow-lg mb-4 bg-white">
                                                <img id="imgQR" src="" class="img-fluid" style="max-width: 280px;" alt="QR Code">
                                            </div>
                                            <form asp-action="ProcessBanking" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="amount" id="finalBankAmount">
                                                <button type="submit" class="btn btn-success w-100 py-3 fw-bold shadow-lg rounded-3">XÁC NHẬN ĐÃ CHUYỂN TIỀN</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* TAB 2: THẺ CÀO (CÓ CHIẾT KHẤU TỪNG MỆNH GIÁ) *@
                    <div class="tab-pane fade" id="tab-card">
                        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                            <div class="card-header border-0 p-4" style="background: linear-gradient(135deg, #d4145a 0%, #fbb03b 100%); text-center">
                                <div class="d-flex align-items-center justify-content-center text-white">
                                    <i class="fa-solid fa-ticket-simple fs-1 me-3"></i>
                                    <div>
                                        <h3 class="fw-bold mb-0 text-uppercase">Nạp Thẻ Cào</h3>
                                        <p class="mb-0 opacity-75 small">Hệ thống duyệt thẻ thủ công</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-4 p-lg-5 bg-white">
                                <form asp-action="PostCard" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <span class="card-type-label">1. Loại thẻ</span>
                                                <select name="cardType" class="form-select form-select-lg border-2 fw-bold">
                                                    <option value="VIETTEL">Viettel</option>
                                                    <option value="VINAPHONE">Vinaphone</option>
                                                    <option value="MOBIFONE">Mobifone</option>
                                                </select>
                                            </div>
                                            <div class="mb-3">
                                                <span class="card-type-label">2. Mệnh giá & Thực nhận</span>
                                                @* 🟢 THÊM CHIẾT KHẤU TỪNG MỆNH GIÁ Ở ĐÂY *@
                                                <select name="amount" id="cardAmountSelect" class="form-select form-select-lg border-2 fw-bold text-danger" onchange="updateReceiveAmount()">
                                                    <option value="10000" data-receive="8000">10,000đ (Nhận 8,000đ)</option>
                                                    <option value="20000" data-receive="16000">20,000đ (Nhận 16,000đ)</option>
                                                    <option value="30000" data-receive="24000">30,000đ (Nhận 24,000đ)</option>
                                                    <option value="50000" data-receive="40000">50,000đ (Nhận 40,000đ)</option>
                                                    <option value="100000" data-receive="82000">100,000đ (Nhận 82,000đ)</option>
                                                    <option value="200000" data-receive="164000">200,000đ (Nhận 164,000đ)</option>
                                                    <option value="500000" data-receive="410000">500,000đ (Nhận 410,000đ)</option>
                                                    <option value="1000000" data-receive="820000">1,000,000đ (Nhận 820,000đ)</option>
                                                </select>
                                                <div class="mt-2 p-2 rounded bg-light border">
                                                    <small class="text-muted fw-bold">SỐ TIỀN THỰC NHẬN: <span id="displayReceive" class="text-success fs-5">8,000đ</span></small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <span class="card-type-label">3. Số Seri</span>
                                                <input type="text" name="serial" class="form-control form-select-lg border-2" placeholder="Nhập mã Seri" required />
                                            </div>
                                            <div class="mb-3">
                                                <span class="card-type-label">4. Mã thẻ (Pin)</span>
                                                <input type="text" name="pin" class="form-control form-select-lg border-2" placeholder="Nhập mã PIN" required />
                                            </div>
                                        </div>
                                        <div class="col-12 text-center mt-4">
                                            <div class="p-3 note-danger rounded-3 mb-4 text-start small">
                                                <i class="fa-solid fa-triangle-exclamation me-2"></i><b>LƯU Ý:</b> Phải chọn đúng mệnh giá thẻ. Sai mệnh giá sẽ không được cộng tiền.
                                            </div>
                                            <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 py-3 fw-bold shadow-lg w-100">GỬI THẺ NGAY <i class="fa-solid fa-paper-plane ms-2"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            updateBankInfo();
            updateReceiveAmount(); // Gọi lúc mới load để hiện 8k
        });

        // Hàm tính thực nhận khi khách chọn mệnh giá thẻ
        function updateReceiveAmount() {
            const select = document.getElementById('cardAmountSelect');
            const receive = select.options[select.selectedIndex].getAttribute('data-receive');
            document.getElementById('displayReceive').innerText = parseInt(receive).toLocaleString() + 'đ';
        }

        function updateBankInfo() {
            const select = document.getElementById('selectBank');
            const selectedOption = select.options[select.selectedIndex];
            const logoUrl = selectedOption.getAttribute('data-logo');
            if(logoUrl) $('#headerBankLogo').attr('src', logoUrl);
            resetQR();
        }

        function resetQR() {
            $('#qrContainer').hide();
            $('#qrPlaceholder').show();
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text);
            Swal.fire({ icon: 'success', title: 'Đã copy!', text: text, timer: 1200, showConfirmButton: false, position: 'top-end', toast: true });
        }

        function runGenerateQR() {
            const amount = $('#bankAmountInput').val();
            const select = document.getElementById('selectBank');

            if (!amount || amount < 10000) {
                Swal.fire({ icon: 'warning', title: 'Tiền nạp không hợp lệ', text: 'Tối thiểu 10,000đ' });
                return;
            }

            const selectedOption = select.options[select.selectedIndex];
            const stk = select.value;
            const bankNameRaw = (selectedOption.getAttribute('data-bankname') || "").toUpperCase();
            const accountName = selectedOption.getAttribute('data-accountname');
            const content = "@transferContent";

            let bankCode = "ICB";
            if (bankNameRaw.includes("TECHCOM") || bankNameRaw.includes("TCB")) bankCode = "TCB";
            else if (bankNameRaw.includes("ACB")) bankCode = "ACB";
            else if (bankNameRaw.includes("MBBANK") || bankNameRaw.includes("MB")) bankCode = "MB";
            else if (bankNameRaw.includes("VIETCOMBANK") || bankNameRaw.includes("VCB")) bankCode = "VCB";
            else if (bankNameRaw.includes("BIDV")) bankCode = "BIDV";
            else if (bankNameRaw.includes("TPB")) bankCode = "TPB";
            else if (bankNameRaw.includes("VPB")) bankCode = "VPB";
            else if (bankNameRaw.includes("AGRI")) bankCode = "VBA";

            const qrUrl = `https://img.vietqr.io/image/${bankCode}-${stk}-compact2.png?amount=${amount}&addInfo=${encodeURIComponent(content)}&accountName=${encodeURIComponent(accountName)}`;

            $.ajax({
                url: '@Url.Action("CreatePendingDeposit", "Home")',
                type: 'POST',
                data: { amount: amount, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() }
            });

            $('#imgQR').attr('src', qrUrl);
            $('#finalBankAmount').val(amount);
            $('#qrPlaceholder').hide();
            $('#qrContainer').show().addClass('animate__animated animate__zoomIn');
        }
    </script>
}