@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewBag.WelcomeTitle?.Replace("<br>", " ") ?? "Nick3s.Shop - Hệ Thống Bán Tài Khoản Số 1 Việt Nam")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        :root {
            --primary-color: #0061ff;
            --secondary-color: #60efff;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at top right, #1a202c, #0d1117);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            overflow: hidden;
            position: relative;
        }

        .particle {
            position: absolute;
            background: rgba(0, 97, 255, 0.2);
            filter: blur(50px);
            border-radius: 50%;
            z-index: 1;
        }

        .content {
            text-align: center;
            z-index: 10;
            max-width: 900px;
            padding: 20px;
        }

        .brand-badge {
            background: rgba(0, 97, 255, 0.1);
            border: 1px solid rgba(0, 97, 255, 0.3);
            padding: 8px 20px;
            border-radius: 50px;
            display: inline-block;
            margin-bottom: 20px;
            font-weight: 700;
            color: var(--secondary-color);
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        .main-title {
            font-size: 4rem;
            font-weight: 900;
            line-height: 1.1;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            background: linear-gradient(to right, #fff 20%, #0061ff 80%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .sub-title {
            font-size: 1.25rem;
            color: #a0aec0;
            margin-bottom: 3rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .btn-enter {
            background: linear-gradient(45deg, #0061ff, #60efff);
            color: white;
            padding: 18px 50px;
            border-radius: 12px;
            font-weight: 800;
            text-decoration: none;
            font-size: 1.3rem;
            transition: all 0.4s ease;
            display: inline-flex;
            align-items: center;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 97, 255, 0.3);
        }

            .btn-enter:hover {
                transform: translateY(-5px) scale(1.05);
                box-shadow: 0 15px 40px rgba(0, 97, 255, 0.5);
                color: white;
            }

        .social-float {
            position: fixed;
            right: 30px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            z-index: 100;
        }

            .social-float a {
                width: 55px;
                height: 55px;
                border-radius: 15px;
                background: rgba(255, 255, 255, 0.05);
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255, 255, 255, 0.1);
                color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                text-decoration: none;
                transition: 0.3s;
                font-size: 1.5rem;
            }

                .social-float a:hover {
                    background: var(--primary-color);
                    transform: translateX(-5px);
                    box-shadow: 0 0 20px var(--primary-color);
                }

        .floating-card {
            position: absolute;
            width: 120px;
            height: 160px;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            z-index: 2;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            font-size: 2.5rem;
            animation: float 6s infinite ease-in-out;
            backdrop-filter: blur(5px);
        }

            .floating-card i {
                filter: drop-shadow(0 0 10px currentColor);
            }

            .floating-card span {
                font-size: 0.7rem;
                font-weight: 700;
                margin-top: 10px;
                opacity: 0.7;
                letter-spacing: 1px;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(5deg);
            }
        }

        @@media (max-width: 768px) {
            .main-title {
                font-size: 2.5rem;
            }

            .floating-card {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="particle" style="width: 400px; height: 400px; top: -10%; left: -10%;"></div>
    <div class="particle" style="width: 300px; height: 300px; bottom: -5%; right: -5%;"></div>

    @* Card Game *@
    <div class="floating-card" style="top: 12%; left: 8%; animation-delay: 0s; color: #0061ff;">
        <i class="fa-solid fa-gamepad"></i><span>GAME ACC</span>
    </div>

    @* Card AI *@
    <div class="floating-card" style="bottom: 12%; left: 10%; animation-delay: 2s; color: #60efff;">
        <i class="fa-solid fa-robot"></i><span>AI PREMIUM</span>
    </div>

    @* Card MOVIE *@
    <div class="floating-card" style="top: 12%; right: 8%; animation-delay: 4s; color: #ff3e3e;">
        <i class="fa-solid fa-film"></i><span>MOVIE ACC</span>
    </div>

    @* Card VPN *@
    <div class="floating-card" style="bottom: 12%; right: 10%; animation-delay: 1s; color: #ffcc00;">
        <i class="fa-solid fa-shield-halved"></i><span>VPN PRO</span>
    </div>

    <div class="social-float">
        <a href="https://zalo.me/0943510229" target="_blank" title="Zalo hỗ trợ"><i class="fa-solid fa-comment-dots"></i></a>
        @* 🟢 GẮN LINK FACEBOOK CỦA MÀY VÀO ĐÂY *@
        <a href="https://www.facebook.com/conqduune" target="_blank" title="Facebook"><i class="fa-brands fa-facebook"></i></a>
        <a href="tel:0943510229" title="Hotline"><i class="fa-solid fa-phone"></i></a>
    </div>

    <div class="content animate__animated animate__zoomIn">
        <div class="brand-badge text-uppercase">@(ViewBag.WelcomeBadge ?? "Nick3s - Uy Tín Tạo Thương Hiệu")</div>

        <h1 class="main-title">@Html.Raw(ViewBag.WelcomeTitle ?? "KHO TÀI KHOẢN SỐ<br>LỚN NHẤT VIỆT NAM")</h1>

        <p class="sub-title">
            @(ViewBag.WelcomeSubTitle ?? "Cung cấp tài khoản Game, Netflix, Youtube Premium, ChatGPT và các dịch vụ số bản quyền với giá rẻ nhất thị trường. Giao dịch tự động 24/7!")
        </p>

        <div class="d-flex flex-column align-items-center">
            <a asp-controller="Home" asp-action="Index" asp-route-welcome="done" class="btn-enter">
                @(ViewBag.WelcomeButtonText ?? "VÀO CỬA HÀNG NGAY") <i class="fa-solid fa-cart-shopping ms-3"></i>
            </a>
            <p class="mt-4 small opacity-50"><i class="fa-solid fa-bolt me-2 text-warning"></i>Uy Tín - Chất Lượng - Khách Hàng Là Trên Hết</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>
</html>