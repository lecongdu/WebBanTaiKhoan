@model IEnumerable<WebBanTaiKhoan.Models.UserViewModel>
@{
    ViewData["Title"] = "Quản lý thành viên";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark">
            <i class="fas fa-users-cog me-2 text-primary"></i>QUẢN LÝ THÀNH VIÊN
        </h3>
        <div class="text-end">
            <span class="badge bg-primary shadow-sm px-3 py-2">Tổng: @Model.Count() người dùng</span>
        </div>
    </div>

    @* Hiển thị thông báo thành công/lỗi *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr style="font-size: 0.85rem; letter-spacing: 0.5px;">
                            <th class="ps-4 py-3">THÀNH VIÊN</th>
                            <th>EMAIL</th>
                            <th>TỔNG NẠP</th>
                            <th>SỐ DƯ HIỆN TẠI</th>
                            <th class="text-center">HÀNH ĐỘNG</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name=@user.UserName&background=random"
                                             class="rounded-circle me-3" width="35" alt="Avatar">
                                        <div>
                                            <div class="fw-bold text-dark">@user.UserName</div>
                                            <small class="text-muted" style="font-size: 0.7rem;">ID: @user.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="small">@user.Email</span></td>
                                <td class="fw-bold text-secondary">
                                    @user.TotalDeposit.ToString("#,##0")<small>đ</small>
                                </td>
                                <td>
                                    @if (user.Balance > 0)
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                            <i class="fas fa-wallet me-1"></i>@user.Balance.ToString("#,##0")đ
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted border px-3 py-2 rounded-pill">
                                            0đ
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        @* NÚT SỬA VÍ (MỚI) *@
                                        <button class="btn btn-white btn-sm border text-success"
                                                onclick="openBalanceModal('@user.Id', '@user.UserName')" title="Cộng/Trừ tiền">
                                            <i class="fas fa-hand-holding-dollar"></i> Sửa ví
                                        </button>

                                        @* Nút Xóa tài khoản *@
                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post"
                                              onsubmit="return confirm('CẢNH BÁO: Bạn có chắc chắn muốn xóa thành viên này?')">
                                            <button type="submit" class="btn btn-white btn-sm border border-start-0">
                                                <i class="fas fa-trash-alt text-danger"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="balanceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <form asp-action="UpdateBalance" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold"><i class="fas fa-edit me-2"></i>CẬP NHẬT SỐ DƯ</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="userId" id="modalUserId" />

                    <div class="mb-3 text-center">
                        <p class="text-muted mb-1">Thành viên đang chọn:</p>
                        <h5 id="modalUserName" class="fw-bold text-primary"></h5>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small">Loại giao dịch</label>
                        <select name="type" class="form-select border-2">
                            <option value="Plus">Cộng tiền (+)</option>
                            <option value="Minus">Trừ tiền (-)</option>
                        </select>
                    </div>

                    <div class="mb-0">
                        <label class="form-label fw-bold small">Số tiền cần thay đổi</label>
                        <div class="input-group">
                            <input type="number" name="amount" class="form-control border-2" placeholder="Ví dụ: 50000" min="1000" required />
                            <span class="input-group-text">đ</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">XÁC NHẬN LƯU</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .bg-success-subtle {
        background-color: #e8f5e9 !important;
    }

    .table tbody tr {
        transition: 0.2s;
    }

        .table tbody tr:hover {
            background-color: #f8faff;
        }

    .btn-white {
        background: #fff;
    }

        .btn-white:hover {
            background: #f1f3f5;
        }

    .modal-content {
        border-radius: 15px;
    }
</style>

@section Scripts {
    <script>
        function openBalanceModal(id, name) {
            document.getElementById('modalUserId').value = id;
            document.getElementById('modalUserName').innerText = name;
            var myModal = new bootstrap.Modal(document.getElementById('balanceModal'));
            myModal.show();
        }
    </script>
}