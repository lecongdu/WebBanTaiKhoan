@model IEnumerable<WebBanTaiKhoan.Models.UserRoleViewModel>
@{
    ViewData["Title"] = "Quản lý thành viên";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark">
            <i class="fas fa-users-cog me-2 text-primary"></i>QUẢN LÝ THÀNH VIÊN
        </h3>
        <div class="text-end">
            <span class="badge bg-primary shadow-sm px-3 py-2">Tổng: @Model.Count() tài khoản</span>
        </div>
    </div>

    @* Hiển thị thông báo *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr style="font-size: 0.85rem; letter-spacing: 0.5px;">
                            <th class="ps-4 py-3">THÀNH VIÊN</th>
                            <th>EMAIL</th>
                            <th>QUYỀN HẠN</th>
                            <th class="text-center">HÀNH ĐỘNG</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://ui-avatars.com/api/?name=@user.UserName&background=random"
                                             class="rounded-circle me-3" width="35" alt="Avatar">
                                        <div>
                                            <div class="fw-bold text-dark">@user.UserName</div>
                                            <small class="text-muted" style="font-size: 0.7rem;">ID: @user.UserId</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="small">@user.Email</span></td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge bg-danger shadow-sm"><i class="fas fa-user-shield me-1"></i>Quản trị viên</span>
                                    }
                                    else if (user.Role == "Collaborator" || user.Role == "usert")
                                    {
                                        <span class="badge bg-info text-white shadow-sm"><i class="fas fa-user-edit me-1"></i>CTV Đăng Hàng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary shadow-sm"><i class="fas fa-user me-1"></i>Khách hàng</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        @* Nút đổi quyền đi tới trang ManageUsers *@
                                        <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-white btn-sm border text-primary fw-bold">
                                            <i class="fas fa-user-tag me-1"></i>Phân quyền
                                        </a>

                                        @* Nút xóa thành viên *@
                                        <form asp-action="Delete" asp-route-id="@user.UserId" method="post"
                                              onsubmit="return confirm('CẢNH BÁO: Xóa thành viên sẽ mất toàn bộ lịch sử. Tiếp tục?')">
                                            <button type="submit" class="btn btn-white btn-sm border border-start-0">
                                                <i class="fas fa-trash-alt text-danger"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table tbody tr:hover {
        background-color: #f8faff;
    }

    .btn-white {
        background: #fff;
    }

        .btn-white:hover {
            background: #f1f3f5;
        }

    .badge {
        font-size: 0.8rem;
        padding: 0.5em 0.8em;
    }
</style>