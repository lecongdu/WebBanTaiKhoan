@model WebBanTaiKhoan.Models.BankAccount

@{
    ViewData["Title"] = "Xác nhận xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white py-3 text-center">
                    <h4 class="mb-0 fw-bold"><i class="fa-solid fa-trash-can me-2"></i>XÁC NHẬN XÓA</h4>
                </div>

                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <p class="text-muted fs-5">Bạn có chắc chắn muốn xóa ngân hàng này không?</p>
                        <div class="d-inline-block p-3 border rounded-3 bg-light mb-3">
                            @* Hiển thị logo thật thay vì đường dẫn *@
                            <img src="@Model.LogoUrl" class="img-fluid" style="max-height: 80px; width: auto;"
                                 onerror="this.src='/images/default-bank.png'" />
                        </div>
                        <h3 class="fw-bold text-primary">@Model.BankName</h3>
                    </div>

                    <div class="bg-light rounded-3 p-3 mb-4">
                        <div class="row mb-2">
                            <div class="col-5 text-muted small fw-bold text-uppercase">Số tài khoản:</div>
                            <div class="col-7 fw-bold">@Model.AccountNumber</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-5 text-muted small fw-bold text-uppercase">Chủ tài khoản:</div>
                            <div class="col-7">@Model.AccountName</div>
                        </div>
                    </div>

                    <div class="alert alert-warning border-0 small">
                        <i class="fa-solid fa-triangle-exclamation me-1"></i>
                        <strong>Lưu ý:</strong> Hành động này không thể hoàn tác. Mọi thông tin liên quan đến ngân hàng này sẽ bị xóa khỏi hệ thống.
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">
                                <i class="fa-solid fa-xmark me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">
                                <i class="fa-solid fa-trash-can me-1"></i> Đồng ý xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .text-uppercase {
            letter-spacing: 0.5px;
        }
    </style>
}