@model WebBanTaiKhoan.Models.Order

@{
    ViewData["Title"] = "Cập nhật đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary">
            <i class="fa-solid fa-pen-to-square me-2"></i>Cập nhật đơn hàng
        </h3>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin đơn hàng #@Model.OrderCode</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="OrderCode" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">Khách hàng</label>
                            <input type="text" class="form-control bg-light" value="@(Model.User?.UserName ?? Model.UserId)" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">Sản phẩm</label>
                            <input type="text" class="form-control bg-light" value="@(Model.Product?.Name ?? "Sản phẩm đã bị xóa")" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">Ngày tạo đơn</label>
                            <input type="text" class="form-control bg-light" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalAmount" class="form-label fw-bold small">Tổng tiền (VNĐ)</label>
                            <div class="input-group">
                                <input asp-for="TotalAmount" class="form-control fw-bold text-success" type="number" />
                                <span class="input-group-text">đ</span>
                            </div>
                            <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Status" class="form-label fw-bold small">Trạng thái đơn hàng</label>
                            <select asp-for="Status" class="form-select fw-bold">
                                <option value="Completed" class="text-success">Completed (Thành công)</option>
                                <option value="Pending" class="text-warning">Pending (Đang chờ)</option>
                                <option value="Cancelled" class="text-danger">Cancelled (Đã hủy)</option>
                                <option value="Refunded" class="text-info">Refunded (Hoàn tiền)</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary py-2 fw-bold rounded-pill shadow-sm">
                                <i class="fa-solid fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 mt-4 mt-lg-0">
                <div class="card-header bg-light py-3 border-bottom">
                    <h6 class="m-0 font-weight-bold text-secondary">Chi tiết tài khoản đã giao</h6>
                </div>
                <div class="card-body p-0">
                    @if (Model.AccountItems != null && Model.AccountItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-light text-muted small text-uppercase">
                                    <tr>
                                        <th class="ps-3">#</th>
                                        <th>Thông tin (Data)</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.AccountItems.Select((v, i) => new { v, i }))
                                    {
                                        <tr>
                                            <td class="ps-3 text-muted">@(item.i + 1)</td>
                                            <td>
                                                <code class="text-dark fw-bold">
                                                    @(string.IsNullOrEmpty(item.v.Data) ? $"{item.v.Username}|{item.v.Password}" : item.v.Data)
                                                </code>
                                            </td>
                                            <td>
                                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-2">Đã bán</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="fa-solid fa-box-open fs-1 mb-2 opacity-50"></i>
                            <p>Không tìm thấy thông tin tài khoản.</p>
                        </div>
                    }
                </div>
            </div>

            <div class="alert alert-warning mt-3 border-0 rounded-3 small">
                <i class="fa-solid fa-circle-info me-2"></i>
                <strong>Lưu ý:</strong> Bạn chỉ nên sửa trạng thái đơn hàng. Không nên sửa thông tin tài khoản tại đây để tránh sai lệch kho.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}