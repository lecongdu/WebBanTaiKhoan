@model IEnumerable<WebBanTaiKhoan.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid mt-4 pb-5">
    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body d-flex justify-content-between align-items-center bg-white rounded-3">
            <div>
                <h2 class="fw-bold text-dark mb-0">
                    <i class="fa-solid fa-receipt text-success me-2"></i> QUẢN LÝ ĐƠN HÀNG
                </h2>
                <p class="text-muted small mb-0">Theo dõi toàn bộ giao dịch và xuất báo cáo doanh thu</p>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-outline-primary fw-bold px-3 rounded-pill">
                    <i class="fa-solid fa-plus me-1"></i> Tạo đơn thủ công
                </a>
                <a asp-action="ExportToExcel" class="btn btn-success fw-bold px-4 rounded-pill shadow-sm">
                    <i class="fa-solid fa-file-excel me-1"></i> Xuất Excel
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="ps-4 py-3">Mã đơn</th>
                            <th class="py-3">Khách hàng</th>
                            <th class="py-3">Sản phẩm / Số lượng</th>
                            <th class="py-3">Tổng tiền</th>
                            <th class="py-3">Trạng thái</th>
                            <th class="py-3">Ngày tạo</th>
                            <th class="text-end pe-4 py-3">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    #@item.OrderCode
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-2 me-2 text-primary">
                                            <i class="fa-solid fa-user"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold small">@(item.User?.UserName ?? "Unknown")</div>
                                            <div class="text-muted x-small">ID: @item.UserId.Substring(0, Math.Min(item.UserId.Length, 8))...</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="fw-bold text-primary">
                                        @(item.Product?.Name ?? "Sản phẩm đã xóa")
                                    </div>
                                    <div class="small text-muted mt-1">
                                        <i class="fa-solid fa-layer-group me-1"></i>
                                        Số lượng: <span class="badge bg-secondary rounded-pill">@(item.AccountItems?.Count ?? 0)</span>
                                    </div>
                                </td>

                                <td>
                                    <span class="fw-bold text-danger">
                                        @item.TotalAmount.ToString("#,##0") đ
                                    </span>
                                </td>

                                <td>
                                    @if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 py-1">
                                            <i class="fa-solid fa-check me-1"></i>Thành công
                                        </span>
                                    }
                                    else if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning px-2 py-1">
                                            <i class="fa-solid fa-clock me-1"></i>Đang chờ
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-2 py-1">
                                            <i class="fa-solid fa-xmark me-1"></i>@item.Status
                                        </span>
                                    }
                                </td>

                                <td>
                                    <div class="small fw-bold">@item.CreatedAt.ToString("dd/MM/yyyy")</div>
                                    <div class="text-muted x-small">@item.CreatedAt.ToString("HH:mm")</div>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            Hành động
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                            <li>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-eye text-info me-2"></i>Xem chi tiết
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-pen-to-square text-warning me-2"></i>Cập nhật
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-trash me-2"></i>Xóa đơn
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="80" class="opacity-50 mb-3" />
                    <p class="text-muted fw-bold">Chưa có đơn hàng nào.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .x-small {
        font-size: 0.75rem;
    }

    .table thead th {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .dropdown-item:active {
        background-color: #e9ecef;
        color: #000;
    }
</style>