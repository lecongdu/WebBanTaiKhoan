@model WebBanTaiKhoan.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary">
            <i class="fa-solid fa-file-invoice me-2"></i>Chi tiết đơn hàng
        </h3>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="m-0 fw-bold text-primary">Đơn hàng #@Model.OrderCode</h5>
                    <span class="badge rounded-pill px-3 py-2
                        @(Model.Status == "Completed" ? "bg-success" :
                                                    Model.Status == "Pending" ? "bg-warning text-dark" : "bg-danger")">
                        @Model.Status
                    </span>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6 border-end">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3">Thông tin khách hàng</h6>
                            <div class="mb-2">
                                <label class="fw-bold small">Người mua:</label>
                                <span class="text-dark">
                                    <i class="fa-solid fa-user-circle me-1 text-secondary"></i>
                                    @(Model.User?.UserName ?? "Tài khoản đã bị xóa")
                                </span>
                            </div>
                            <div class="mb-2">
                                <label class="fw-bold small">Email/ID:</label>
                                <span class="font-monospace text-muted">@Model.UserId</span>
                            </div>
                            <div>
                                <label class="fw-bold small">Ngày đặt:</label>
                                <span>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                            </div>
                        </div>

                        <div class="col-md-6 ps-md-4 mt-3 mt-md-0">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3">Thông tin thanh toán</h6>
                            <div class="mb-2">
                                <label class="fw-bold small">Sản phẩm:</label>
                                <span class="text-primary fw-bold">@(Model.Product?.Name ?? "Sản phẩm đã bị xóa")</span>
                            </div>
                            <div class="mb-2">
                                <label class="fw-bold small">Đơn giá:</label>
                                <span>@Model.Price.ToString("#,##0") đ</span>
                            </div>
                            <div>
                                <label class="fw-bold small">Tổng tiền:</label>
                                <span class="text-danger fs-5 fw-bold">@Model.TotalAmount.ToString("#,##0") đ</span>
                            </div>
                        </div>
                    </div>

                    <hr class="bg-secondary opacity-10 my-4">

                    <h6 class="fw-bold text-dark mb-3">
                        <i class="fa-solid fa-list-check me-2 text-success"></i>Danh sách tài khoản trong đơn (@(Model.AccountItems?.Count ?? 0))
                    </h6>

                    @if (Model.AccountItems != null && Model.AccountItems.Any())
                    {
                        <div class="table-responsive border rounded-3">
                            <table class="table table-striped table-hover mb-0 align-middle">
                                <thead class="bg-light text-uppercase small fw-bold">
                                    <tr>
                                        <th class="ps-4" style="width: 60px;">#</th>
                                        <th>Thông tin tài khoản (Data / User|Pass)</th>
                                        <th class="text-center" style="width: 150px;">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.AccountItems.Select((val, idx) => new { val, idx }))
                                    {
                                        <tr>
                                            <td class="ps-4 text-muted">@(item.idx + 1)</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <code class="fw-bold text-dark bg-white border px-2 py-1 rounded me-2">
                                                        @(string.IsNullOrEmpty(item.val.Data) ? $"{item.val.Username}|{item.val.Password}" : item.val.Data)
                                                    </code>
                                                    <button class="btn btn-sm btn-light text-secondary border"
                                                            onclick="navigator.clipboard.writeText(this.previousElementSibling.innerText); alert('Đã copy!');"
                                                            title="Copy">
                                                        <i class="fa-regular fa-copy"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-success bg-opacity-10 text-success">Đã giao</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            <i class="fa-solid fa-box-open me-2"></i>Không tìm thấy dữ liệu tài khoản chi tiết.
                        </div>
                    }
                </div>

                <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning fw-bold rounded-pill px-4 shadow-sm">
                        <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>