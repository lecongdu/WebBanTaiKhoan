@model WebBanTaiKhoan.Models.Order

@{
    ViewData["Title"] = "Xóa đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="alert alert-danger shadow-sm border-0 border-start border-danger border-5 rounded-3 mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-triangle-exclamation fa-2x me-3"></i>
                    <div>
                        <h4 class="alert-heading fw-bold mb-1">CẢNH BÁO XÓA DỮ LIỆU!</h4>
                        <p class="mb-0">
                            Bạn đang thực hiện xóa đơn hàng <strong>#@Model.OrderCode</strong>.
                            Hành động này <strong>không thể hoàn tác</strong>.
                        </p>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white py-3">
                    <h5 class="m-0 font-weight-bold text-danger">Thông tin đơn hàng cần xóa</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Mã đơn hàng</dt>
                        <dd class="col-sm-8 fw-bold text-dark">#@Model.OrderCode</dd>

                        <dt class="col-sm-4 text-muted">Khách hàng</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark">
                                <i class="fa-solid fa-user me-1"></i> @(Model.User?.UserName ?? "Không xác định")
                            </span>
                        </dd>

                        <dt class="col-sm-4 text-muted">Sản phẩm</dt>
                        <dd class="col-sm-8 fw-bold text-primary">@(Model.Product?.Name ?? "Sản phẩm đã xóa")</dd>

                        <dt class="col-sm-4 text-muted">Ngày tạo</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                        <dt class="col-sm-4 text-muted">Tổng tiền</dt>
                        <dd class="col-sm-8 text-success fw-bold">@Model.TotalAmount.ToString("#,##0") đ</dd>

                        <dt class="col-sm-4 text-muted">Trạng thái</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.Status</span>
                        </dd>
                    </dl>

                    <hr class="my-4" />

                    <h6 class="fw-bold text-secondary mb-3"><i class="fa-solid fa-list me-2"></i>Chi tiết tài khoản trong đơn:</h6>

                    @if (Model.AccountItems != null && Model.AccountItems.Any())
                    {
                        <div class="bg-light p-3 rounded border">
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in Model.AccountItems)
                                {
                                    <li class="mb-2 border-bottom pb-2">
                                        <i class="fa-solid fa-key text-warning me-2"></i>
                                        <span class="font-monospace text-dark">
                                            @(string.IsNullOrEmpty(item.Data) ? $"{item.Username} | {item.Password}" : item.Data)
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted fst-italic p-3 bg-light rounded text-center">
                            (Không có dữ liệu tài khoản chi tiết)
                        </div>
                    }
                </div>

                <div class="card-footer bg-light py-3 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                        <i class="fa-solid fa-xmark me-2"></i>Hủy bỏ
                    </a>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">
                            <i class="fa-solid fa-trash-can me-2"></i>Xác nhận xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>