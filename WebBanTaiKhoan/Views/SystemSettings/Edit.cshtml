@model WebBanTaiKhoan.Models.SystemSetting

@{
    ViewData["Title"] = "Chỉnh sửa cấu hình";
}

<div class="container mt-4 pb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary"><i class="fa-solid fa-gear"></i> CẤU HÌNH HỆ THỐNG</h2>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary fw-bold">
            <i class="fa-solid fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        @* Các thẻ ẩn để giữ ảnh cũ *@
        <input type="hidden" asp-for="BannerUrl" />
        <input type="hidden" asp-for="BannerUrl2" />
        <input type="hidden" asp-for="BannerUrl3" />

        <div class="row">
            @* --- CỘT 1: 3 BANNER --- *@
            <div class="col-md-12 mb-4">
                <div class="card shadow-sm border-primary border-top border-4 rounded-4">
                    <div class="card-header bg-white fw-bold text-primary">Quản lý 3 Banner Slider</div>
                    <div class="card-body">
                        <div class="row text-center">
                            @* Banner 1 *@
                            <div class="col-md-4 border-end">
                                <label class="fw-bold small mb-2">Banner 1 (Chính):</label>
                                <img src="@(Model.BannerUrl ?? "/images/no-image.png")" id="preview1" class="img-fluid rounded mb-2 border" style="height: 100px; object-fit: cover;" />
                                <input type="file" name="bannerFile1" class="form-control form-control-sm" accept="image/*" onchange="previewImage(this, 'preview1')" />
                            </div>
                            @* Banner 2 *@
                            <div class="col-md-4 border-end">
                                <label class="fw-bold small mb-2">Banner 2:</label>
                                <img src="@(Model.BannerUrl2 ?? "/images/no-image.png")" id="preview2" class="img-fluid rounded mb-2 border" style="height: 100px; object-fit: cover;" />
                                <input type="file" name="bannerFile2" class="form-control form-control-sm" accept="image/*" onchange="previewImage(this, 'preview2')" />
                            </div>
                            @* Banner 3 *@
                            <div class="col-md-4">
                                <label class="fw-bold small mb-2">Banner 3:</label>
                                <img src="@(Model.BannerUrl3 ?? "/images/no-image.png")" id="preview3" class="img-fluid rounded mb-2 border" style="height: 100px; object-fit: cover;" />
                                <input type="file" name="bannerFile3" class="form-control form-control-sm" accept="image/*" onchange="previewImage(this, 'preview3')" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* --- CỘT 2: THÔNG TIN & MAP --- *@
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-info border-top border-4 rounded-4">
                    <div class="card-header bg-white fw-bold text-info">Thông tin liên hệ</div>
                    <div class="card-body">
                        <div class="mb-2"><label class="small fw-bold">Địa chỉ:</label><input asp-for="ContactAddress" class="form-control" /></div>
                        <div class="mb-2"><label class="small fw-bold">Hotline:</label><input asp-for="ContactPhone" class="form-control" /></div>
                        <div class="mb-2"><label class="small fw-bold">Zalo:</label><input asp-for="ContactZalo" class="form-control" /></div>
                        <div class="mb-2"><label class="small fw-bold">Chữ chạy (Marquee):</label><input asp-for="MarqueeText" class="form-control" /></div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-danger border-top border-4 rounded-4">
                    <div class="card-header bg-white fw-bold text-danger">Google Maps</div>
                    <div class="card-body">
                        <label class="small fw-bold">Mã Iframe:</label>
                        <textarea asp-for="MapHtml" class="form-control mb-2" rows="3" id="mapInput"></textarea>
                        <div id="mapPreview" class="border rounded bg-light overflow-hidden" style="height: 120px;">
                            @Html.Raw(Model.MapHtml)
                        </div>
                    </div>
                </div>
            </div>

            @* --- CỘT 3: MẠNG XÃ HỘI --- *@
            <div class="col-12 mb-4">
                <div class="card shadow-sm border-dark border-top border-4 rounded-4">
                    <div class="card-header bg-white fw-bold">Mạng xã hội & Footer</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-2"><label class="small fw-bold">Giới thiệu Footer:</label><textarea asp-for="FooterAbout" class="form-control" rows="3"></textarea></div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-6 mb-2"><label class="small">Facebook:</label><input asp-for="FacebookUrl" class="form-control form-control-sm" /></div>
                                    <div class="col-6 mb-2"><label class="small">Youtube:</label><input asp-for="YoutubeUrl" class="form-control form-control-sm" /></div>
                                    <div class="col-6 mb-2"><label class="small">Tiktok:</label><input asp-for="TiktokUrl" class="form-control form-control-sm" /></div>
                                    <div class="col-6 mb-2"><label class="small">Discord:</label><input asp-for="DiscordUrl" class="form-control form-control-sm" /></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg px-5 fw-bold rounded-pill shadow">
                <i class="fa-solid fa-save"></i> LƯU THAY ĐỔI
            </button>
        </div>
    </form>
</div>

<script>
    function previewImage(input, id) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) { document.getElementById(id).src = e.target.result; }
            reader.readAsDataURL(input.files[0]);
        }
    }
    document.getElementById('mapInput').addEventListener('input', function() {
        document.getElementById('mapPreview').innerHTML = this.value;
    });
</script>